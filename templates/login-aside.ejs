<aside class="login">
  <%
  if (typeof profile === 'undefined' || !profile) {
    %>
    <div class="user profile">
      <img src="https://secure.gravatar.com/avatar/avatar.jpg?s=100&d=mm" class="avatar-medium"> <a href=/signup>Create Account</a> | <a href=/login>Login</a>
    </div>
    <%
  } else {
    %>
    <div class="user profile">
      <% if (profile.avatarMedium) { %>
      <img src="<%= profile.avatarMedium %>" class="avatar-medium">
      <% } %>
      <a class="username" href="/profile"><%= profile.fullname || profile.name %></a>
      <p class=profsub>
        <a class=profsub href=/profile-edit>Edit Profile</a> |
        <a class=profsub href=/logout>Log out</a>
      </p>
    </div>
    <ul class="menu">
    </ul>
    <%
  }
  %>
</aside>
